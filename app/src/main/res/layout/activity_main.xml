<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.des.odontec.equipe.odontec.View.MainActivity_Login"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundoodontec">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe seus dados de acesso para
                       continuar"/>
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/logarSistemaFacebook"
        android:layout_width="281dp"
        android:background="@drawable/botaoface"
        android:textColor="#FFFFFF"
        android:layout_height="37dp"
        android:text="   F  |            Entrar com Facebook"
        />


    <Button
        android:id="@+id/logarSistemaGoog"
        android:layout_marginTop="10dp"
        android:layout_width="281dp"
        android:background="@drawable/botaogmail"
        android:textColor="#FFFFFF"
        android:layout_height="37dp"
        android:text="G  |            Entrar com google" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="_______________________  ou  ________________________"
    />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emialLogin"
        android:inputType="textEmailAddress"
        android:hint="Digite seu E-mail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/senhaLogin"
        android:hint="Digite sua senha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/recuperarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Esqueceu sua senha?"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cadatrarUusario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FaÃ§a seu Cadastro"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/logarSistema"
        android:layout_width="281dp"
        android:layout_height="37dp"
        android:background="@drawable/botaoodontec"
        android:text=" O  |            Entrar com Odonte"
        android:textColor="#ffffff" />



</LinearLayout>
