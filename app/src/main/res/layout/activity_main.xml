<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.des.odontec.equipe.odontec.View.CadastrarUsuario"
    android:orientation="vertical"
    android:gravity="center"
    >


    <FrameLayout
        android:id="@+id/f2l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparencia"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progresslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundoodontec"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/logoodontec" />


        <EditText

            android:id="@+id/emialLogin"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/senhaLogin"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/logarSistema"
            android:layout_width="242dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botaoodontec"
            android:text="  O  |        Entrar com Odontec"
            android:textColor="#ffffff" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="________________________OU________________________"
            />

        <Button

            android:id="@+id/logarSistemaFacebook"
            android:layout_width="242dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botaoface"
            android:fontFamily="@string/common_google_play_services_install_text"
            android:text="    F  |         Entrar com Facebook"
            android:textColor="#FFFFFF" />


        <Button
            android:id="@+id/logarSistemaGoog"
            android:layout_width="242dp"
            android:layout_height="37dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/botaogmail"
            android:fontFamily="@string/common_google_play_services_install_text"
            android:text="G  |         Entrar com google"
            android:textColor="#FFFFFF" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cadatrarUusario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="NÃO TEM UMA CONTA? FAÇA SEU CADASTRO"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recuperarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="ESQUECEU SUA SENHA? RECUPERAR"
            android:textColor="#000000"
            android:textSize="12dp" />


    </LinearLayout>

</FrameLayout>
