<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25B7D3"
    android:orientation="vertical"
    tools:context="com.des.odontec.equipe.odontec.View.Quizz">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pontos"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <View
                        android:id="@+id/separator"
                        android:layout_width="65dp"
                        android:layout_height="1dp"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="PONTOS"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acertos"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <View
                        android:id="@+id/separator1"
                        android:layout_width="65dp"
                        android:layout_height="1dp"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="ACERTOS"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/erros"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <View
                        android:id="@+id/separator2"
                        android:layout_width="65dp"
                        android:layout_height="1dp"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="ERROS"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="370dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="#39C1DD"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/pgt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="2dp"
                                    android:textColor="#ffffff"
                                    android:textSize="15dp" />

                            </LinearLayout>
                        </ScrollView>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">


                                <LinearLayout
                                    android:layout_width="370dp"
                                    android:layout_height="450dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/alterA"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/botaoquiz"
                                        android:padding="10dp"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/alterB"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/botaoquiz"
                                        android:padding="10dp"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/alterC"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/botaoquiz"
                                        android:padding="10dp"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/alterD"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/botaoquiz"
                                        android:padding="10dp"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/alterE"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/botaoquiz"
                                        android:padding="10dp"
                                        android:textSize="15dp" />
                                </LinearLayout>

                            </ScrollView>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>
            </ScrollView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/statusProgresso"
    android:layout_marginBottom="-35dp"/>
            <ProgressBar
                android:id="@+id/status"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:progressDrawable="@drawable/progressquiz" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ajuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/botaoquiz"
                    android:fontFamily="monospace"
                    android:text="ajuda"
                    android:textColor="#25B7D3" />


                <Button
                    android:id="@+id/pular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/botaoquiz"
                    android:fontFamily="monospace"
                    android:text="pular"
                    android:textColor="#25B7D3" />


                <Button
                    android:id="@+id/sair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/botaoquiz"
                    android:fontFamily="monospace"
                    android:text="sair"
                    android:textColor="#25B7D3" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
