<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.des.odontec.equipe.odontec.View.CadastrarUsuario"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.des.odontec.equipe.odontec.View.MainActivity_Login"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fundoodontec"
        android:weightSum="1">

        <EditText
            android:id="@+id/nomeUsuario"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Digite seu nome"
            android:inputType="text" />

        <EditText
            android:id="@+id/emailUsuario"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/senhaUsuario"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Digite sua senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirSenhaUsuario"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Confirmar senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/cidadeUsuario"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Digite o nome de sua cidade"
            android:inputType="text" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Salvar"
                android:textSize="20dp"
                android:onClick="salvar"/>
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparencia"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>
