<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.des.odontec.equipe.odontec.View.CadastrarUsuario"
    android:layoutDirection="ltr"
    android:background="#FFFFFF"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/fl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparencia"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="353dp"
            android:layout_gravity="center"
            android:background="@drawable/fundocadastro"
            android:orientation="vertical"
            android:weightSum="1"
            tools:context="com.des.odontec.equipe.odontec.View.MainActivity_Login">

            <EditText

                android:id="@+id/nomeUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Digite seu nome"
                android:background="@drawable/edittextfundo"
                android:inputType="text"
                android:textColorHint="#FFFFFF"
                android:drawableLeft="@drawable/nome"
                android:layout_weight="0.11" />

            <EditText
                android:id="@+id/emailUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextfundo"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:hint="Digite seu email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/senhaUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextfundo"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:hint="Digite sua senha"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/confirSenhaUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextfundo"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:hint="Confirmar senha"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/estadoUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextfundo"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:hint="Estado"
                android:inputType="text" />

            <EditText
                android:id="@+id/cidadeUsuario"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextfundo"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:hint="Cidade"
                android:inputType="text" />


        </LinearLayout>

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="242dp"
            android:layout_height="37dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/fundocadastro"
            android:gravity="center"
            android:onClick="salvar"
            android:text="Salvar"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</ScrollView>
