<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.des.odontec.equipe.odontec.View.DeletarConta"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="397dp"
        android:layout_gravity="center"

        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.63">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/senha"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/deletarConta"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Senha"
                android:inputType="textPassword" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/confirmeExclusao"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:background="@drawable/botaosavacad"
            android:textColor="#00AFEF"
            android:text="Excluir" />
    </LinearLayout>
</LinearLayout>
